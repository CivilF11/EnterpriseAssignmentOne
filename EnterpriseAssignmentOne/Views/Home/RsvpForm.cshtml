@using EnterpriseAssignmentOne.Models;

@model CompetitionInvite

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <title>Student Competition RSVP</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()



                <div class="form-group">
                    <label>Your name:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>



                <div class="form-group">
                    <label>Your email:</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>



                <div class="form-group">
                    <label>Your phone:</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>




                <div class="form-group">
                    <label>Technical Interest:</label>
                    @Html.DropDownListFor(x => x.Interest, new[]
                    {
                        new SelectListItem()
                        {
                            Text = "Internet of Things",
                            Value = TechnicalInterest.IoT.ToString()
                        },
                        new SelectListItem()
                        {
                            Text = "Cognitive Computing",
                            Value = TechnicalInterest.Cognitive.ToString()
                        },
                        new SelectListItem()
                        {
                            Text = "Wearable Computing",
                            Value = TechnicalInterest.Wearable.ToString()
                        },
                        new SelectListItem()
                        {
                            Text = "Augmented / Virtual Reality",
                            Value = TechnicalInterest.AR_VR.ToString()
                        }
                    },
                    "Choose an option",
                    new { @class = "form-control" })
                </div>



                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Accept Invitation" name="btnSubmit" />

                    <input class="btn btn-warning" type="submit" value="Send Regrets" name="btnSubmit"/>
                </div>
            }
        </div>
    </div>


</body>
</html>
